<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <!-- ====================== Plasma Gun  ===================== -->

    <ThingDef ParentName="BaseBullet">
        <defName>GW_HOI_Bullet_PlasmaShot</defName>
        <label>plasma shot</label>
        <graphicData>
            <texPath>Things/Projectiles/Plasma_Projectile</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>TransparentPostLight</shaderType>
        </graphicData>
        <thingClass>Projectile_Explosive</thingClass>
        <projectile>
            <damageDef>Vaporize</damageDef>
            <damageAmountBase>30</damageAmountBase>
            <stoppingPower>1.0</stoppingPower>
            <armorPenetrationBase>0.5</armorPenetrationBase>
            <explosionRadius>2.5</explosionRadius>
            <speed>60</speed>
			<explosionEffect>GW_PlasmaEffecter</explosionEffect>
        </projectile>
    </ThingDef>

    <ThingDef ParentName="BaseHumanMakeableGun">
        <defName>GW_HOI_Gun_PlasmaGun</defName>
        <label>Plasma gun M35 Magnacore pattern</label>
        <description>A smaller plasma gun for use by the Imperial Guard. Even though it is scaled for a baseline human, the plasma it fires is still a big threat even to armored targets.\n\nBeing a squad’s plasma gunner is a dubious honor. While a plasma gunner has the power of the sun in their hands, that same power could also blast them to pieces with one too many trigger pulls.</description>
        <techLevel>Spacer</techLevel>
        <graphicData>
            <drawSize>1.2</drawSize>
            <texPath>Weapons/GW_HOI_CadianPlasmaGun</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Interact_ChargeRifle</soundInteract>
        <statBases>
            <WorkToMake>24000</WorkToMake>
            <Mass>7</Mass>
            <AccuracyTouch>0.60</AccuracyTouch>
            <AccuracyShort>0.80</AccuracyShort>
            <AccuracyMedium>0.70</AccuracyMedium>
            <AccuracyLong>0.55</AccuracyLong>
            <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
            <MarketValue>1400</MarketValue>
        </statBases>
		<equippedStatOffsets>
            <MoveSpeed>-0.20</MoveSpeed>
        </equippedStatOffsets>
        <recipeMaker>
            <recipeUsers Inherit="False">
                <li>HP_AM_MilitarumFabricationBench</li>
            </recipeUsers>		
            <researchPrerequisite>GW_AM_CadianShockTroops</researchPrerequisite>
            <skillRequirements>
                <Crafting>15</Crafting>
            </skillRequirements>
        </recipeMaker>
        <costList>
            <Plasteel>35</Plasteel>
            <Steel>55</Steel>
            <ComponentSpacer>3</ComponentSpacer>
			<HP_Ceramite>20</HP_Ceramite>
        </costList>
        <weaponTags>
            <li>SpacerGun</li>
            <li>GW_AM_SpacerRanged</li>
            <li>GW_HOI_SpecialWeapons</li>
        </weaponTags>
        <tradeTags>
            <li>HPRanged</li>
            <li>GW_AM_SpacerRanged</li>
        </tradeTags>
        <weaponClasses>
            <li>RangedHeavy</li>
        </weaponClasses>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>GW_HOI_Bullet_PlasmaShot</defaultProjectile>
                <warmupTime>2</warmupTime>
                <range>30</range>
                <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
                <forcedMissRadius>1.0</forcedMissRadius>
                <burstShotCount>1</burstShotCount>
                <soundCast>HP_AM_Plasma_Gun_Sound</soundCast>
                <soundCastTail>GunTail_Heavy</soundCastTail>
                <muzzleFlashScale>12</muzzleFlashScale>	
                <targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
            </li>
        </verbs>
        <tools>
            <li>
                <label>stock</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
                <armorPenetration>0.13</armorPenetration>
            </li>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
                <armorPenetration>0.13</armorPenetration>
            </li>
        </tools>
    </ThingDef>


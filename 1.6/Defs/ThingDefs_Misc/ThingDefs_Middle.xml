	<!-- Commissar Plate -->

	<ThingDef ParentName="GW_HOI_MiddleBase">
        <defName>GW_HOI_CommissarMiddle</defName>
        <label>Cadian commissar breastplate</label>
        <description>A breastplate which bears the distinguishing marks of a Commissar's rank. Such protection is popular among commissars who prefer to lead from the front rather than barking commands from the safety of the back lines.</description>
        <recipeMaker>
            <researchPrerequisite>GW_AM_OfficersOfAM</researchPrerequisite>
        </recipeMaker>
        <graphicData>
            <texPath>Things/Cadian/Middle/GW_HOI_CadianCommissarPlate</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <!-- <costStuffCount>70</costStuffCount> -->
        <!-- <stuffCategories> -->
		<!-- <li>Metallic</li> -->
        <!-- </stuffCategories> -->
		<costList>
			<Steel>60</Steel>			
			<ComponentIndustrial>2</ComponentIndustrial>
			<HP_Ceramite>25</HP_Ceramite>
        </costList>	
        <thingCategories>
            <li>ApparelMisc</li>
        </thingCategories>
        <statBases>
            <MaxHitPoints>350</MaxHitPoints>
            <WorkToMake>8000</WorkToMake>
			<MarketValue>340</MarketValue>
            <Mass>2.5</Mass>
			<ArmorRating_Sharp>0.82</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.43</ArmorRating_Blunt>
            <ArmorRating_Heat>0.50</ArmorRating_Heat>
            <Insulation_Cold>15.0</Insulation_Cold>
			<Insulation_Heat>5.0</Insulation_Heat>
            <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.5</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.3</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>3</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <SocialImpact>0.05</SocialImpact>
			<SlaveSuppressionOffset MayRequire="Ludeon.Rimworld.Ideology">0.05</SlaveSuppressionOffset>
        </equippedStatOffsets>
        <apparel>
            <wornGraphicPath>Things/Cadian/Middle/GW_HOI_CadianCommissarPlate</wornGraphicPath>
            <tags>
                <li>40kCommissar</li>
                <li>40kCommissarMiddle</li>
            </tags>
			<bodyPartGroups>
                <li>Torso</li>
                <!-- <li>Neck</li> -->
                <li>Shoulders</li>
                <!-- <li>Arms</li> -->
                <!-- <li>Legs</li> -->
            </bodyPartGroups>
        </apparel>
    </ThingDef>
	
	<!-- Cadian Psyker -->

	<ThingDef ParentName="GW_HOI_MiddleBase">
        <defName>GW_HOI_CadianPsykerJacket</defName>
        <label>Sanctioned psyker jacket</label>
        <description>The garb of a sanctioned psyker. Every day, psychically active children are whisked away on the ominous Black Ships where they undergo a hellish process designed to temper their powers. Those who emerge with their souls intact become Sanctioned Psykers, trained to wield their volatile powers in the name of the Imperium.</description>
        <recipeMaker>
            <researchPrerequisite>GW_AM_MilitariumArmor</researchPrerequisite>
        </recipeMaker>
        <graphicData>
            <texPath>Things/Cadian/CadianPsyker/CadianPsykerMiddle/GW_HOI_CadianPsykerMiddle</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <thingCategories>
            <li>ApparelMisc</li>
        </thingCategories>
        <statBases>
            <MaxHitPoints>150</MaxHitPoints>
            <WorkToMake>70000</WorkToMake>
			<MarketValue>500</MarketValue>
            <Mass>1.5</Mass>
            <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.3</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.2</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>3</EquipDelay>
        </statBases>
        	<costList>
			    <Cloth>100</Cloth>			
			    <Gold>2</Gold>
			    <HP_Ceramite>10</HP_Ceramite>
        </costList>	
        <equippedStatOffsets>
			<PsychicSensitivity>0.5</PsychicSensitivity>
			<PsychicEntropyMax MayRequire="ludeon.rimworld.royalty">6</PsychicEntropyMax>
			<PsychicSensitivityOffset MayRequire="ludeon.rimworld.royalty">0.15</PsychicSensitivityOffset>
			<PsychicEntropyRecoveryRate MayRequire="ludeon.rimworld.royalty">0.1</PsychicEntropyRecoveryRate>
        </equippedStatOffsets>
        <apparel>
            <wornGraphicPath>Things/Cadian/CadianPsyker/CadianPsykerMiddle/GW_HOI_CadianPsykerMiddle</wornGraphicPath>
            <tags>
                <li>40kCadianPsyker</li>
                <li>40kCadianPsykerMiddle</li>
            </tags>
			<bodyPartGroups>
                <li>Torso</li>
                <!-- <li>Neck</li> -->
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
        </apparel>
    </ThingDef>
	

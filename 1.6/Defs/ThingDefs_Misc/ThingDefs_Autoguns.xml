    <ThingDef Abstract="true" ParentName="BaseHumanMakeableGun" Name="GW_HOI_AutogunBase">
        <graphicData>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <recipeMaker>
            <researchPrerequisite>GW_Autoguns</researchPrerequisite>
            <displayPriority>420</displayPriority>
        </recipeMaker>
        <thingSetMakerTags>
            <li>RewardStandardQualitySuper</li>
        </thingSetMakerTags>
        <tradeTags>
            <li>HPAutoguns</li>
        </tradeTags>
        <weaponTags>
            <li>HP_Autogun</li>
        </weaponTags>
    </ThingDef>

        <!-- Agripinaa MKII -->

    <ThingDef ParentName="GW_HOI_AutogunBase">
        <defName>GW_HOI_Gun_Agripinaamkii</defName>
        <label>Autogun Agripinaa MK II</label>
        <description>A semi-automatic autogun, similar to an assault rifle, that fires caseless solid-slug rounds. Compared to the assault rifles of modern rimworlds, these more advanced weapons boast greater damage, armor penetration, and range.</description>
        <graphicData>
            <texPath>Weapons/GW_HOI_AutogunSemi</texPath>
        </graphicData>
        <soundInteract>Interact_Rifle</soundInteract>
        <recipeMaker>
            <skillRequirements>
                <Crafting>6</Crafting>
            </skillRequirements>
        </recipeMaker>
        <statBases>
            <WorkToMake>5000</WorkToMake>
            <Mass>3.6</Mass>
            <AccuracyTouch>0.55</AccuracyTouch>
            <AccuracyShort>0.72</AccuracyShort>
            <AccuracyMedium>0.66</AccuracyMedium>
            <AccuracyLong>0.58</AccuracyLong>
            <RangedWeapon_Cooldown>1.6</RangedWeapon_Cooldown>
        </statBases>
        <costList>
            <Steel>75</Steel>
            <ComponentIndustrial>8</ComponentIndustrial>
        </costList>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>GW_HOI_Bullet_AutoGun</defaultProjectile>
                <warmupTime>1.0</warmupTime>
                <range>34</range>
                <burstShotCount>3</burstShotCount>
                <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
                <soundCast>GW_AM_Gun_Agripinaamkii</soundCast>
                <soundCastTail>GunTail_Medium</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
            </li>
        </verbs>
        <weaponTags>
            <li>AssaultRifle</li>
        </weaponTags>
        <tools>
            <li>
                <label>stock</label>
                <capacities>
                <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>barrel</label>
                <capacities>
                <li>Blunt</li>
                <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
    </ThingDef>
 
